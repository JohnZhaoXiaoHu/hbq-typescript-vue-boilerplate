{
  "name": "typescript-vue-base",
  "version": "1.0.0",
  "description": "vue typescript webpack2",
  "author": "hbqhbq123@qq.com",
  "keywords": [
    "webpack3",
    "typescript",
    "vue",
    "frontend"
  ],
  "scripts": {
    "clean": "rimraf dist build",
    "tsc": "npm run clean && tsc",
    "start:size": "better-npm-run start:size",
    "start": "better-npm-run start",
    "open:dist": "lite-server --config ./dev-config/lite-server-config.json ",
    "build": "better-npm-run build:dev",
    "build:dev": "better-npm-run build:dev",
    "build:prod": "better-npm-run build:prod",
    "tree:dir": "treee -l 2 --ignore node_modules/,.git/",
    "lint": "tslint ./src/**/*.ts"
  },
  "betterScripts": {
    "start": {
      "command": "better-npm-run dev"
    },
    "start:size": {
      "command": "better-npm-run dev",
      "env": {
        "NODE_ENV": "production",
        "analysis": "1",
        "description": "运行构建后会自动打开包分析"
      }
    },
    "dev": {
      "command": "webpack-dev-server --config ./dev-config/webpack.config.ts --progress --hot ",
      "env": {
        "NODE_ENV": "development",
        "IS_PROXY": true
      }
    },
    "build": {
      "command": "webpack --config ./dev-config/webpack.config.ts --progress --display-error-details"
    },
    "build:dev": {
      "command": "better-npm-run build",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "better-npm-run build",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "vue": "^2.5.21",
    "vue-class-component": "^6.3.2",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.12.15",
    "@types/webpack": "^4.4.21",
    "autoprefixer": "^9.4.3",
    "awesome-typescript-loader": "^5.2.1",
    "better-npm-run": "^0.1.1",
    "bitbar-webpack-progress-plugin": "^0.1.3",
    "clean-webpack-plugin": "^1.0.0",
    "cli-color": "^1.4.0",
    "compression-webpack-plugin": "^0.3.2",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.0.1",
    "eslint": "2.7.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "globby": "^8.0.1",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "lite-server": "^2.4.0",
    "postcss-loader": "^3.0.0",
    "postcss-px2rem": "^0.3.0",
    "progress-webpack-plugin": "^0.0.21",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "require-dir": "^1.2.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "strip-loader": "^0.1.2",
    "style-loader": "^0.23.1",
    "stylefmt": "^6.0.3",
    "stylefmt-loader": "^1.2.3",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^17.0.0",
    "tree-cli": "^0.4.12",
    "ts-loader": "^5.3.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.2.2",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-dev-server": "^3.1.10"
  },
  "repository": "https://github.com/githbq/hbq-typescript-vue-boilerplate.git",
  "license": "MIT"
}
